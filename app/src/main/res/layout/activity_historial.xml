<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_historial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gashe.mimasacorporal.activities.HistorialActivity">

    <TextView
        android:id="@+id/myListHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HISTORIAL IMC"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:text="FECHA"
        android:layout_below="@+id/myListHistorial"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/textView4" />

    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleIMC"
        android:id="@+id/myListView">

    </ListView>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="IMC"
        android:textAlignment="center"
        android:id="@+id/titleIMC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
